{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs":true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [ 
      "./typings/", 
      "./node_modules/@types/" 
     ],
     "baseUrl": "src",
    "paths": {
      "@": ["src"],
      "images": ["src/assets/images"],
      "services":["src/services"],
    }
  },
  "include": [ 
    "src/**/*" 
   ], 
   "exclude": [ 
    "node_modules", 
    "**/*.test.ts" 
   ]
}